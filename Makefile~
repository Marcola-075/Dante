SRC	=	main.c				\
		start_it.c			\
		GAME/my_game.c			\
		MENU/my_menu.c			\
		BETA/create_map.c		\
		BETA/map_create.c		\
		BETA/display_map.c		\
		BETA/create_game_sp.c		\
		BETA/move_map.c			\
		BETA/my_clock.c

OBJ	=	$(SRC:.c=.o)

NAME	=	my_rpg

CFLAGS	=	-I ./include

CSF	=	-l csfml-graphics -l csfml-window -l csfml-system -l csfml-audio

LIB	=	-L ./lib/ -lmy

all:	$(NAME)

$(NAME):	$(OBJ)
		make -sC ./lib/my/
		gcc -o $(NAME) $(OBJ) $(LIB) $(CSF)

clean:
	rm -f $(OBJ)
	make -sC ./lib/my clean

fclean: clean
	rm -f $(NAME)
	make -sC ./lib/my fclean

re: fclean all
